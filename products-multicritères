    <script>
        function filterProducts() {
          var selectedFeatures = Array.from(document.querySelectorAll("#featureSelector input:checked")).map(checkbox => checkbox.value);
            var productContainers = document.getElementsByClassName("product-container");
            for (var i = 0; i < productContainers.length; i++) {
                var product = productContainers[i];
                var featuresList = product.getElementsByTagName("li");
                var hasSelectedFeature = false;
                for (var j = 0; j < featuresList.length; j++) {
                    var feature = featuresList[j].getAttribute("data-feature");
                    if (selectedFeatures.includes(feature)) {
                        hasSelectedFeature = true;
                        break;
                    }
                }

                if (selectedFeatures.length === 0) {
                    hasSelectedFeature = true;
                }
                if (hasSelectedFeature) {
                    product.style.display = "block";
                } else {
                    product.style.display = "none";
                }
            }
        }


        function addToCart(productName, price) {
            alert("Ajouté au panier : " + productName + " - Prix : " + price + "€");
        }
    </script>
